<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dos"
    android:background="#FBFBFB"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Enviar_pregunta.Fragment2">


    <LinearLayout
        android:id="@+id/ly"
      android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
           android:fontFamily="@font/muli"
           android:textSize="17dp"
            android:layout_height="wrap_content"
            android:text="Por favor asegurate de crear las opciones y respuesta correcta en un maximo de 2 palabras." />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Pregunta" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/shape03"
            android:ems="10" />

        <TextView
            android:id="@+id/textView10"
         android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Respuesta correcta  :)" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape03"
            android:layout_marginBottom="15dp"
            android:ems="5"
            android:fontFamily="@font/muli" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli"
            android:text="Opcion incorrecta" />

        <EditText
            android:id="@+id/gdfg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape03"
            android:layout_marginBottom="15dp"
            android:ems="5"
            android:fontFamily="@font/muli">

        </EditText>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli"
            android:text="Opcion incorrecta" />

        <EditText
            android:id="@+id/gdfg4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape03"
            android:layout_marginBottom="15dp"
            android:ems="5"
            android:fontFamily="@font/muli">

        </EditText>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli"
            android:text="Opcion incorrecta" />

        <EditText
            android:id="@+id/gdfg3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape03"
            android:ems="5"
            android:fontFamily="@font/muli">

        </EditText>


    </LinearLayout>

    <Button
        android:id="@+id/mibutton"
        android:background="@drawable/shape2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
       android:fontFamily="@font/muli"
        android:layout_marginRight="60dp"
        android:text="Enviar Pregunta"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp" />


</LinearLayout>

