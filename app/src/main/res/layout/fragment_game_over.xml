<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/uno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="1000dp"
    android:orientation="vertical"
    tools:context=".Juego_Partida">

    <LinearLayout
        android:id="@+id/df"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#7B4FC8"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="336dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                app:srcCompat="@android:drawable/ic_popup_sync" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cv"
        android:layout_width="match_parent"

        android:layout_height="470dp"
        android:layout_marginTop="55dp"

        android:background="#FAF8FD"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/muli"
            android:text="JUEGO TERMINADO "
            android:textColor="#4E4E4E"
            android:textSize="25dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:text="Intentalo Nuevamente"
            android:textColor="#464647"
            android:textSize="20dp">

        </TextView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_fondo_tiburon"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="202dp"
                android:layout_height="265dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/tiburon_mediotrizte2" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/sfr"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/cv"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="-35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/sombra"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/muli"

                    android:gravity="center"
                    android:text="@string/valor1"
                    android:textColor="#3C3C3C"
                    android:textSize="26dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/score1" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="Puntaje"
                    android:textSize="26dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Pts"
                    android:textSize="26dp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_empezarjuego"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/sfr"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape2"
        android:fontFamily="@font/muli"
        android:text="INTENTARLO NUEVAMENTE"
        android:textSize="17dp"
        android:textStyle="bold" />


</RelativeLayout>