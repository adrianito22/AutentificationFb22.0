<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dsd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7E57C2"
    android:minHeight="1000dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/df"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#7E57C2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageButton4"
                android:layout_width="67dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@android:drawable/ic_menu_revert" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageButn4"
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="13dp"
                app:srcCompat="@mipmap/home" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/asd"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_below="@+id/df"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/texto_uno"
            android:layout_width="wrap_content"
            android:layout_height="109dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/muli"
            android:text="TextView pregunta va por aqui dfd sfddgdfgdfg dfgdfb  fd gfdggdfgdfgdfgdf"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/as"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/asd"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="-195dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/shape_boton_next"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:text="PREGUNTA"
            android:background="#FFFBAF00"
            android:id="@+id/button9"
            android:layout_height="match_parent">

        </Button>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_below="@id/mundo"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="-15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape"
            android:orientation="vertical">

            <TextView
                android:id="@+id/respuestas2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="110dp"
                android:text="TextView"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="20dp"
                android:text="Respuesta "
                android:textSize="16dp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/mundo"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_below="@+id/df"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="170dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/shape_fondo_tiburon"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            app:srcCompat="@drawable/tiburon_celebrando2" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_siguiente_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="41dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_boton_next"
        android:onClick="fragmentol"
        android:text="Siguiente Pregunta" />



</RelativeLayout>