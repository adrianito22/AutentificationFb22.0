<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/uno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFAFA"
    android:minHeight="1000dp"
    android:orientation="vertical"
    tools:context=".MainActivity2dos">

    <LinearLayout
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="324dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/shape_home"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="262dp"
            android:layout_height="265dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle5"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:text="Puntaje"
                    android:textSize="26dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView47"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:text="000"
                        android:textColor="@color/black"
                        android:textSize="26dp" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:text="Pt"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/sfr"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/cv"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="-35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/sombra"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli"
                    android:text="Nivel"
                    android:textColor="#4A148C"
                    android:textSize="15dp">

                </TextView>

                <TextView
                    android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#4A148C"
                    android:textSize="21dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/score1" />

                <LinearLayout
                    android:id="@+id/image22"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:visibility="visible"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/coin">

                    </ImageView>

                </LinearLayout>

                <TextView
                    android:id="@+id/monedas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#4A148C"
                    android:textSize="22dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_empezarjuego"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/sfr"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/shape2"
        android:fontFamily="@font/muli"
        android:text="Empezar juego"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_continuar_juego"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/btn_empezarjuego"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="40dp"

        android:layout_marginBottom="10dp"
        android:background="@drawable/shape2"
        android:fontFamily="@font/muli"
        android:text="Continuar"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_puntuar_app"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/btn_continuar_juego"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shape2"
        android:fontFamily="@font/muli"
        android:onClick="solicitar_puntuacion3"
        android:text="PUNTUAR APP"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold" />

</RelativeLayout>