<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#875FC0"
    tools:context=".ProfileActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8C5AD5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

        </LinearLayout>

        <TextView
            android:id="@+id/lisdta"
            android:layout_width="194dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/muli"
            android:text="Ranking Puntajes"
            android:textStyle="bold"
            android:textColor="#F6F3F3"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/closes"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:onClick="iraactivity"
            android:src="@drawable/com_facebook_close" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <ImageView
                android:id="@+id/fotoPerfil"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="233dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:fontFamily="@font/muli"
            android:text="Luis Jose"
            android:textColor="#F6F4F4"
            android:textSize="20dp" />


    </LinearLayout>

    <ListView
        android:id="@+id/listita"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:cacheColorHint="#FFFFFF"
        android:entries="@array/arrayveinte">
    </ListView>

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar sesion"/>
</LinearLayout>