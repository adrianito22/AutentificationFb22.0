<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/uno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="1000dp"
    android:orientation="vertical"
    tools:context=".Game_over1">

    <LinearLayout
        android:id="@+id/df"
        android:background="#8159BA"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="336dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageButton4"
                android:layout_width="67dp"
                android:layout_height="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@android:drawable/ic_lock_power_off" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageButn4"
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="13dp"
                app:srcCompat="@mipmap/trofeos"/>

            <ImageView
                android:id="@+id/imageutton4"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@android:drawable/ic_menu_share" />






        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="324dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_home"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="262dp"
            android:layout_height="265dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:background="@drawable/circle5"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:text="Puntaje"
                    android:textSize="26dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView47"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:text="000"
                        android:textColor="@color/black"
                        android:textSize="26dp" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:text="Pt"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/sfr"
        android:layout_width="match_parent"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/sombra"
        android:layout_height="70dp"
        android:layout_below="@+id/cv"
        android:layout_marginTop="-35dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/w"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                     android:gravity="center"
                    app:srcCompat="@drawable/correct_tick" />

                <TextView
                    android:id="@+id/result"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:text="123 / ?"
                    android:textColor="#4A148C"
                    android:textSize="21dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/score1" />

                <LinearLayout
                    android:id="@+id/image22"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:visibility="visible"
                    tools:visibility="visible" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@mipmap/coin"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                    </ImageView>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#4A148C"
                    android:textSize="22dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="18dp"
        android:onClick="startandContinuar"
        android:background="@drawable/shape2"
        android:fontFamily="@font/muli"
        android:layout_below="@id/sfr"
        android:text="Empezar juego"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape2"
        android:fontFamily="@font/muli"
        android:layout_below="@id/button5"
        android:text="Continuar"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button55"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape2"
       android:onClick="startandContinuar"
        android:fontFamily="@font/muli"
        android:layout_below="@id/button8"
        android:text="Mejores Puntuaciones"
        android:textSize="18dp"
        android:textStyle="bold" />

</RelativeLayout>